<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/interface_settings_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <!-- Screen and animations -->
    <PreferenceScreen
        android:key="screen_and_animations"
        android:fragment="com.android.settings.tipsy.ScreenAndAnimations"
        android:title="@string/screen_and_animations_title" />

    <PreferenceScreen
        android:id="@+id/app_circle_sidebar"
        android:title="@string/app_circle_bar_title"
        android:fragment="com.android.settings.terminus.AppCircleSidebar" />

    <PreferenceScreen
        android:key="battery_bar"
        android:fragment="com.android.settings.slim.BatteryBar"
        android:title="@string/battery_bar" />

    <PreferenceScreen
        android:key="expanded_desktop"
        android:title="@string/power_menu_expanded_desktop"
        android:fragment="com.android.settings.applications.ExpandedDesktopPreferenceFragment" />

    <!-- DeviceHandler device specific screen off gesture settings -->
    <Preference
        android:id="@+id/screen_off_gesture_settings"
        android:title="@string/screen_off_gesture_settings_title">
        <intent
           android:action="com.slim.action.LAUNCH_SCREEN_OFF_GESTURE_SETTINGS"
           android:targetPackage="com.slim.device"
           android:targetClass="com.slim.device.settings.ScreenOffGestureSettings" />
    </Preference>

    <PreferenceScreen
        android:key="lock_screen_weather_settings"
        android:title="@string/lock_screen_weather_settings_title"
        android:fragment="com.android.settings.slim.LockScreenWeatherSettings" />

    <PreferenceScreen
        android:key="quick_settings"
        android:fragment="com.android.settings.slim.QsSettings"
        android:title="@string/qs_title" />

    <PreferenceScreen
        android:key="recent_panel"
        android:fragment="com.android.settings.slim.RecentPanel"
        android:title="@string/recent_panel_category" />

    <PreferenceScreen
        android:key="status_bar"
        android:fragment="com.android.settings.slim.StatusBar"
        android:title="@string/status_bar_title" />

    <PreferenceScreen
        android:id="@+id/system_app_remover"
        android:title="@string/system_app_remover"
        android:summary="@string/systemappremover_summary"
        android:fragment="com.android.settings.slim.fragments.SystemappRemover" />
   
</PreferenceScreen>
